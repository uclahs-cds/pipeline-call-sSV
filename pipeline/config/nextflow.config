manifest {
    name = "call-sSV"
    mainScript = "call-sSV.nf"
    nextflowVersion = ">=20.07.1"
    author = "Yu Pan, Ghouse Mohammed"
    homePage = "https://github.com/uclahs-cds/pipeline-call-sSV"
    description = "A pipeline to call Somatic SV utilizing Delly"
    version = "1.0.0"
    }

params {
    dataset_id = "TEST"
    blcds_registered_dataset = false
    sge_scheduler = false
   
    input_csv = "/hot/pipelines/development/slurm/call-sSV/input/tumor_control_pair_0.csv"

    reference_fasta = "/hot/ref/reference/GRCh38-BI-20160721/Homo_sapiens_assembly38.fasta"

    exclusion_file = "/hot/ref/tool-specific-input/Delly/GRCh38/human.hg38.excl.tsv"

    output_dir = "/hot/pipelines/development/slurm/call-sSV/output"

    temp_dir = "/scratch/call-sSV"

    save_intermediate_files = true
    cache_intermediate_pipeline_steps = false

    // Pipeline tool versions
    delly_version = '0.8.7'
    bcftools_version = '1.12'
    validate_version = '2.1.5'

    verbose = false

    /* Delly filtering parameters
    The below default values are recommended to reduce runtimes.
    See - https://github.com/dellytools/delly 'Delly is running too slowly what can I do?' for more */

    map_qual = 20
    min_clique_size = 5
    mad_cutoff = 15
    }

includeConfig "${projectDir}/config/methods.config"

